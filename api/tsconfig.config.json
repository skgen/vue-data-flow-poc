{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "node16",
        "strict": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "isolatedModules": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "scripts/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}